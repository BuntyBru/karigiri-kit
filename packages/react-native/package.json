{
  "name": "@karigiri-kit/react-native",
  "version": "1.0.0",
  "description": "React Native component library for Karigiri Kit",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "react-native": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "test": "jest"
  },
  "dependencies": {
    "@karigiri-kit/tokens": "workspace:*",
    "@tamagui/animations-react-native": "^1.90.0",
    "@tamagui/config": "^1.90.0",
    "@tamagui/core": "^1.90.0",
    "@tamagui/get-token": "^1.90.0"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-native": "^0.73.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.45",
    "@types/react-native": "^0.73.0",
    "@types/node": "^20.10.4",
    "react": "^18.2.0",
    "react-native": "^0.73.2",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "jest": "^29.7.0",
    "@testing-library/react-native": "^12.4.2"
  },
  "publishConfig": {
    "access": "public"
  }
} 